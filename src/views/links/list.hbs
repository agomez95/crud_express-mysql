<div class="container p-4">
    <div class="row">
        {{#each links}} {{!-- aqui mando en un #each el objeto link --}}
            <div class="col-md-3 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" class="target-blank">
                            <h3 class="card-title">{{title}}</h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p> {{!-- aqui mando a mi helper timeago el objeto "created_at" --}}
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links creados</p>
                    <a href="/links/add" class="btn btn-success">Crea uno nuevo aqu√≠</a>
                </div>
            </div>
        {{/each}}   {{!-- aqui ciero el /each --}}
    </div>
</div>